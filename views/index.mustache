<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/master.css">
    <title></title>
  </head>
  <body>
    <form action="/" method="post">
      <div class="">
        <input type="text" name="todo" value="" placeholder="Add a todo"></input>
        <input class="button" type="submit" value="Add todo"></input>
      </div>
    </form>

    <form class="" action="/completed" method="post">
      <div class="">
        {{#todos}}
          <button type="submit" name="button" value="{{.}}">Done</button>
          <h3>{{.}}<h3>
            {{/todos}}
        </div>
      </form>
      <br>
      <div class="completedTasks">
        <h3>Completed Tasks</h3>
        {{#completed}}
        <h3>{{.}}</h3>
        {{/completed}}
      </div>


  </body>
</html>
